<!--View for editing `Comment`-->
<div class="container">
  <div class="col-sm-12 blog-main">
    <h3 class="leave-comment">Edit Comment</h3>

    <%= form_for([ @post, @comment ], url: post_comment_path, method: 'put') do |f| %>
      <div class="form-group">
        <p>
          <%= f.text_area :body, class: "form-control" %>
        </p>
        <p>
          <!-- save redirects to single-`Post` view, see comments controller -->
          <%= f.submit 'Save Comment', class: "btn btn-default submit-btn" %>
        </p>
      </div>
    <% end %>
  </div>
</div>


