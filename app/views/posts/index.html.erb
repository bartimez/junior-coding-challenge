<!-- View for showing all `Post` -->

<% if @posts.blank? %>
  <p>Sorry, no posts!</p>
<% else %>
  <div id="posts">
    <% @posts.each do |post| %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.body[0..200] %> . . .</p>
        <%= link_to "Comments", post_path(post), class: 'post_title' %>
      </div>
    <% end %>
  </div>
<% end %>

