<!-- View for showing all `Post` -->
<div class="container">

  <div class="blog-top">
    <h1 class="blog-title">CareerBlog</h1>
    <p class="blog-description">A blog about anything other than Lorem Ipsum.</p>
  </div>

  <hr>

  <div class="row">

    <!-- begin main column -->
    <div class="col-sm-9 blog-main"> 
    <% if @posts.blank? %>
      <p>Sorry, no posts!</p>
    <% else %>
      <% @posts.each do |post| %>
        <div class="blog-post">
          <h2 class="blog-post-title"><%= post.title %></h2>
          <p class="blog-post-timestamp">Posted <b><%= time_ago_in_words(post.created_at)%></b> ago</p>
          <p class="blog-post-body"><%= post.body[0..200] %> . . .</p>
          <div class="btn btn-default submit-btn"><%= link_to "Comments (#{post.comments.size})", post_path(post), class: 'post_title' %></div>
        </div>
        <hr>
      <% end %>
    <% end %>
    </div>
    <!-- end main column --> 

    <!-- begin sidebar -->
    <div class="col-sm-3">
      <div class="sidebar-module sidebar-module-inset">
        <h4>About</h4>
        <p class="sidebar-text">Freshly-minted, super-determined lady dev seeks employment at CareerPlug by making a simple, minimal blog app in Rails.</p>
      </div>
      <div class="sidebar-module">
        <h4>Me, In the Wild</h4>
        <ol class="list-unstyled">
          <li><a href="https://github.com/bartimez">GitHub</a></li>
          <li><a href="http://linkedin.com/in/brittany-artimez">LinkedIn</a></li>
        </ol>
      </div>
    </div>
    <!-- end sidebar -->

  </div> <!-- end row -->

</div> <!-- end container-->
