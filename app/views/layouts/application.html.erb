<!-- Layouts wrap multiple views --> 
<!DOCTYPE html>
<html>
  <head>
    <title>JuniorCodingChallenge</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "Create a New Post", new_post_path, class: "new_post" %>
    
    <!-- have to add get because the method for form_tag defaults to post -->
    <%= form_tag(posts_path, method: :get, id: "search-form") do %>
      <%= text_field_tag(:search, params[:search], placeholder: "Search posts . . .") %>
      <%= submit_tag("Search", name: nil) %>
    <% end %>

    <!-- output our various notices upon user action -->
    <p class="flash"><%= flash.notice %></p>

    <!-- yield tag - where content from the view should be inserted -->
    <%= yield %>
  </body>
</html>
